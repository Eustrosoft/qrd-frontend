{
  "extends": "stylelint-config-standard-scss",
  "plugins": ["stylelint-order"],
  "ignoreFiles": ["/*.js", "/*.ts", "/*.html", "/*.css", "**/*.svg", "node_modules/*", "**/material.override.scss"],
  "rules": {
    "scss/operator-no-unspaced": null,
    "color-function-notation": "legacy",
    "alpha-value-notation": "number",
    "no-empty-source": null,
    "media-feature-range-notation": null,
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": ["ng-deep"]
      }
    ],
    "property-disallowed-list": ["background-color"],
    "order/order": [
      "custom-properties",
      "dollar-variables",
      "at-rules",
      "declarations",
      {
        "type": "rule",
        "selector": "^>"
      },
      {
        "type": "rule",
        "selector": "^."
      },
      {
        "type": "at-rule",
        "name": "include",
        "hasBlock": true
      },
      {
        "type": "rule",
        "selector": "^&::(before|after)"
      },
      {
        "type": "rule",
        "selector": "^&_"
      },
      {
        "type": "at-rule",
        "name": "media"
      },
      {
        "type": "at-rule",
        "name": "supports"
      }
    ],
    "order/properties-order": [
      [
        "top",
        "gap",
        "src",
        "left",
        "grid",
        "flex",
        "clip",
        "font",
        "mask",
        "zoom",
        "fill",
        "inset",
        "right",
        "order",
        "float",
        "clear",
        "width",
        "color",
        "bottom",
        "height",
        "margin",
        "border",
        "quotes",
        "filter",
        "resize",
        "cursor",
        "widows",
        "stroke",
        "content",
        "z-index",
        "display",
        "row-gap",
        "padding",
        "outline",
        "hyphens",
        "opacity",
        "columns",
        "orphans",
        "position",
        "grid-row",
        "grid-gap",
        "overflow",
        "tab-size",
        "max-zoom",
        "min-zoom",
        "grid-area",
        "isolation",
        "flex-grow",
        "flex-flow",
        "flex-wrap",
        "min-width",
        "max-width",
        "font-size",
        "text-wrap",
        "word-wrap",
        "direction",
        "user-zoom",
        "transform",
        "animation",
        "mask-image",
        "column-gap",
        "column-gap",
        "flex-basis",
        "align-self",
        "object-fit",
        "overflow-x",
        "overflow-y",
        "box-sizing",
        "min-height",
        "max-height",
        "margin-top",
