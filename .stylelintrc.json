        "visibility",
        "transition",
        "grid-column",
        "flex-shrink",
        "align-items",
        "margin-left",
        "padding-top",
        "border-left",
        "empty-cells",
        "font-weight",
        "font-family",
        "line-height",
        "text-indent",
        "text-shadow",
        "white-space",
        "user-select",
        "column-span",
        "column-fill",
        "column-rule",
        "break-after",
        "orientation",
