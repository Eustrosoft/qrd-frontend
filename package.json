{
  "name": "qrd-frontend",
  "version": "2.2.0",
  "scripts": {
    "start": "npx eslint ./src && ng serve --configuration=development",
    "start:http-server": "npm run build:preproduction && http-server -p 8080 -c-1 dist -P https://qrdemo.dev40.qxyz.ru -b",
    "build:production": "ng build --configuration production && npm run compress && npm run tag-dist",
    "build:preproduction": "ng build --configuration preproduction && npm run compress && npm run tag-dist",
    "build:stats-json": "ng build --configuration=production --stats-json",
    "generate-api-types": "openapi-typescript https://qrdemo.dev40.qxyz.ru/qrCodeDemo/v3/api-docs -o src/app/api/schema.d.ts --properties-required-by-default",
    "translate": "ng extract-i18n && node ./devtools/merge-i18n.js",
    "compress": "node devtools/compress.mjs",
    "set-version": "node ./devtools/set-version.js",
    "tag-dist": "node ./devtools/tag-dist.js",
    "prettier": "npx prettier -w \"{*.json,*.[tj]s,*.scss}\" ./src",
    "lint": "npx prettier -c \"{*.json,*.[tj]s}\" ./src && npx eslint ./src --fix",
    "stylelint": "npx stylelint \"**/*.scss\" --fix",
    "lint-staged": "npm run lint && npm run stylelint",
    "prepare": "husky",
    "release": "standard-version -a",
    "release:major": "standard-version -a --release-as major"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.7",
    "@angular/common": "^20.3.3",
    "@angular/compiler": "^20.3.3",
    "@angular/core": "^20.3.3",
    "@angular/forms": "^20.3.3",
    "@angular/material": "^20.2.7",
    "@angular/platform-browser": "^20.3.3",
    "@angular/platform-browser-dynamic": "^20.3.3",
    "@angular/router": "^20.3.3",
    "@angular/service-worker": "^20.3.3",
    "@ngxs/store": "^20.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^20.3.0",
    "@angular-eslint/eslint-plugin": "^20.3.0",
    "@angular-eslint/eslint-plugin-template": "^20.3.0",
    "@angular-eslint/schematics": "^20.3.0",
    "@angular-eslint/template-parser": "^20.3.0",
    "@angular/build": "^20.3.4",
    "@angular/cli": "^20.3.4",
    "@angular/compiler-cli": "^20.3.3",
    "@angular/localize": "^20.3.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@ngxs/cli": "^3.0.0",
    "@ngxs/devtools-plugin": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "ng-extract-i18n-merge": "^3.1.0",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.5.3",
    "standard-version": "^9.5.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard-scss": "^15.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "~5.8.3"
  },
  "standard-version": {
    "scripts": {
      "postbump": "npm run set-version && git add src/index.html"
    }
  }
}
